<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>


        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:divider">@color/divider</item>


        <item name="android:colorBackground">@color/windowBackground</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@color/white</item>


        <!--<item name="android:colorButtonNormal">@color/defaultBtnColor</item>-->
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:popupBackground">@color/popMenuBgColor</item>
        <item name="android:actionModeBackground">@color/popMenuBgColor</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="whiteAppTheme" parent="AppTheme">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:colorBackground">@color/whiteBgColor</item>
        <item name="android:windowBackground">@color/whiteBgColor</item>
    </style>

    <style name="hintTextStyle">
        <item name="android:textColor">@color/hintColor</item>
    </style>


    <!--button-->
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">@dimen/dimen_dp10</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StateBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:colorBackground">@color/windowBackground</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@android:color/white</item>
        <!--<item name="android:colorButtonNormal">@color/defaultBtnColor</item>-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorHint">@color/hintColor</item>
    </style>
    <!-- 因为已经有toolBar 设置NoActionBar-->
    <style name="NoActionbarFullScreen" parent="StateBarStyle">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@color/whiteBgColor</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">2dp</item>
    </style>


    <style name="FloatingStyle">
        <item name="android:background">@color/primary</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="MyCustomTabLayout" parent="AppTheme">
        <item name="android:background">@color/primary</item>
        <item name="tabIndicatorColor">@color/yellow</item>
        <!--<item name="android:textColorPrimary">@color/WHITE</item>-->
        <!--<item name="android:colorBackground">@color/item_bg_color</item>-->
    </style>


    <color name="defaultBtnColor">#212223</color>
</resources>
